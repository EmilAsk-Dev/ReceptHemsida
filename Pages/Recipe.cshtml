


@page
@model ReceptHemsida.Pages.RecipeModel
@{
    ViewData["Title"] = "All Recipes";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!-- HEADER SECTION -->
<div class="container-fluid text-center py-5" style="background: rgb(16, 121, 16); color: white;">
    <h1 class="display-4 fw-bold">Explore Our Recipes</h1>
    <p class="lead">Find delicious recipes that match your taste and preferences</p>
</div>

<!-- FILTER SECTION -->
<div class="container mt-4">
    <div class="card p-4 mb-4 shadow-lg border-0">
        <h4 class="mb-3 text-center text-primary fw-bold">Find Your Perfect Recipe</h4>
        <div class="row">
            <div class="col-md-4">
                <label for="categoryFilter" class="form-label fw-bold">Category:</label>
                <select id="categoryFilter" class="form-select">
                    <option value="all">All Categories</option>
                    @foreach (var category in Enum.GetValues(typeof(ReceptHemsida.Models.RecipeCategory)))
                    {
                        <option value="@category">@category</option>
                    }
                </select>
            </div>

            <div class="col-md-4">
                <label for="timeFilter" class="form-label fw-bold">Cooking Time:</label>
                <select id="timeFilter" class="form-select">
                    <option value="all">Choose Time</option>
                    <option value="15">Under 15 min</option>
                    <option value="30">Under 30 min</option>
                    <option value="60">Under 60 min</option>
                    <option value="120">Under 2 hours</option>
                </select>
            </div>

            <div class="col-md-4">
                <label for="searchTitle" class="form-label fw-bold">Search by Title:</label>
                <input type="text" id="searchTitle" class="form-control" placeholder="Enter recipe title">
            </div>
        </div>
    </div>

    <!-- RECIPES GRID -->
    <div class="row">
        @foreach (var recipe in Model.Recipes)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-lg border-0 rounded">
                    <img src="@(string.IsNullOrEmpty(recipe.ImageUrl) ? "/images/default-recipe.jpg" : recipe.ImageUrl)"
                         class="card-img-top rounded-top" alt="@recipe.Title" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold text-primary">@recipe.Title</h5>
                        <p class="card-text text-muted flex-grow-1">@recipe.Description</p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>⏱ @recipe.CookTime min</strong></li>
                            <li class="list-group-item"><strong>🏆 @recipe.Difficulty</strong></li>
                            <li class="list-group-item"><strong>📌 @recipe.Category</strong></li>
                        </ul>
                    </div>
                    <div class="card-footer bg-white text-center">
                        <a href="/recipe/details/@recipe.Id" class="btn btn-primary w-100 rounded-pill fw-bold">🍴 View Recipe</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- NO RECIPES MESSAGE -->
    <div id="noRecipesMessage" class="alert alert-warning text-center mt-4 d-none">
        <p>No recipes were found with the selected filters.</p>
    </div>
</div>
