@page
@model ReceptHemsida.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
    <div>
        <label>Email</label>
        <input asp-for="Input.UsernameOrEmail" required />
    </div>
    <div>
        <label>Password</label>
        <input asp-for="Input.Password" type="password" required />
    </div>
    <div>
        <input type="checkbox" asp-for="Input.RememberMe" />
        <label>Remember Me</label>
    </div>
    <button type="submit">Login</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <p style="color: red;">Invalid login attempt.</p>
}
